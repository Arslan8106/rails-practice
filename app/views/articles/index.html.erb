<h1>Listing all articles </h1>

<table> 

<tr>
<th>Title</th>
<th>Description</th>
</tr>

<% @articles.each do |article| %>
<tr>
<td> <h3><b> <%= article.title%></b> </h3></td>
<td> <%= article.descrption%> </td>
<td> <%= link_to 'Show',  article_path(article), class: 'btn btn-danger' %>  </td> 
<td> <%= link_to 'Edit',  edit_article_path(article), class: 'btn btn-danger' %> </td>
<td><%= button_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure?"} , class: 'btn btn-danger'%></td>


</tr>
<% end %>
</table>
<br>
<%= link_to 'Create New Article',  new_article_path , class: 'btn btn-danger'%> 
