<h1>Listing all articles </h1>

<table> 

<tr>
<th>Title</th>
<th>Description</th>
</tr>

<% @articles.each do |article| %>
<tr>
<td> <b> <%= article.title%></b> </td>
<td> <%= article.descrption%> </td>
<td> <button><%= link_to 'Show',  article_path(article) %>  </button></td> 
<td> <button><%= link_to 'Edit',  edit_article_path(article) %> </button></td>
</tr>
<% end %>
</table>
<br>
<button><%= link_to 'Create New Article',  new_article_path %> </button> 
